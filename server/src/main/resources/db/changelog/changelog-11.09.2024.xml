<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="6_cascade_user_room" author="admin">
        <dropForeignKeyConstraint baseTableName="user_room" constraintName="fk_user_user_room"/>
        <addForeignKeyConstraint baseTableName="user_room"
                                 baseColumnNames="user_id"
                                 constraintName="fk_user_user_room"
                                 referencedTableName="user"
                                 referencedColumnNames="user_id"
                                 onDelete="CASCADE"/>

        <dropForeignKeyConstraint baseTableName="user_room" constraintName="fk_room_user_room"/>
        <addForeignKeyConstraint baseTableName="user_room"
                                 baseColumnNames="room_id"
                                 constraintName="fk_room_user_room"
                                 referencedTableName="room"
                                 referencedColumnNames="room_id"
                                 onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>