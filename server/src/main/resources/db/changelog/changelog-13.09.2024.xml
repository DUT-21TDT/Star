<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="6_increase_description_max_length" author="Quang Nguyen">
        <sql>
            ALTER TABLE room
            alter column description type VARCHAR(200);
        </sql>
    </changeSet>

    <changeSet id="7_cascade_verification_token" author="Quang Nguyen">
        <dropForeignKeyConstraint baseTableName="verification_token" constraintName="fk_user_verification_token"/>
        <addForeignKeyConstraint baseTableName="verification_token" baseColumnNames="user_id" constraintName="fk_user_verification_token" referencedTableName="user"
                                 referencedColumnNames="user_id" onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>